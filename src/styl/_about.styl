.about
  background primary
  height auto
  display block
  padding-top rem(50px)
  padding-bottom rem(50px)
  .title
    color secondary
    text-align center
    font-size rem(40px)
    display block
    +tablet()
      font-size rem(50px)
    +desktop()
      font-size rem(70px)
  .subtitle
    color secondary
    text-align center
    font-size rem(30px)
    display block
    +tablet()
      font-size rem(40px)
    +desktop()
      font-size rem(60px)
  .content
    center(90%)
    margin-top rem(50px)
    margin-bottom rem(35px)
    +tablet()
      margin-bottom rem(45px)
    +desktop()
      display flex
      margin-bottom rem(60px)
  .card-about
    background feat
    column(1, gutter: .8)
    display block
    box-sizing border-box
    border 1px solid secondary
    border-radius rem(5px)
    margin-bottom rem(20px)
    +desktop()
      flex 1
      column(1/3, gutter: .8)
  .card-title
    width 100%
    background secondary
    color primary
    text-align center
    font-size rem(25px)
    +tablet()
      font-size rem(30px)
    +desktop()
      font-size rem(35px)
  .card-content
    color secondary
    text-align justify
    padding-left rem(20px)
    padding-right rem(20px)
    font-size rem(20px)
    +desktop()
      font-size rem(25px)
  .more-events
    background primary
    width 100%
    margin-top rem(40px)
    text-align center
    +tablet()
      margin-top rem(50px)
    +desktop()
      margin-top rem(60px)
  .btn-events
    background secondary
    color primary
    padding rem(15px)
    border-radius rem(9px)
    font-size rem(30px)
    cursor pointer
    transition all 1s ease
    &:hover
      background feat
      color secondary
      font-size rem(35px)
      transition all 1s ease
    +tablet()
      font-size rem(40px)
      &:hover
        font-size rem(45px)
    +desktop()
      font-size rem(45px)
      &:hover
        font-size rem(50px)
