html,
body
  height 100%

$bg-header
  background primary
  height 93%
  .content
    width 90%
    align(both)
    text-align center

.header
  @extends $bg-header
  h1,h2
    color texts
    font-family Capsmall
    text-align center
  .title
    font-size rem(90px)
    line-height 1
    display block
    +above(cut_size)
      margin-bottom 0
      font-size rem(130px)
  .description
    font-size rem(35px)
    display block
    margin rem(40px) 0
    +above(cut_size)
      font-size rem(75px)
