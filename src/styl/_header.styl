html,
body
  height 100%
  font-family Prototype

a
  color primary
  &:hover
    color hover
  &:active
    color hover
  &:visited
    color hover

.fixed-btn
  width rem(60px)
  height rem(60px)
  position fixed
  bottom 0
  right 0
  margin-bottom rem(20px)
  margin-right rem(20px)
  background feat
  color secondary
  opacity 0.7
  font-size rem(60px)
  text-align center
  vertical-align center
  cursor pointer
  transition all 1s ease
  &:hover
    opacity 1
    transition all 1s ease

.header
  background secondary
  height 100%
  display block
  .content
    width 90%
    align(center)
    text-align center
  img
    height 80%
    width 80%
    +tablet()
      height 60%
      width 60%
    +desktop()
      height 40%
      width 40%
  .btn-more
    background primary
    color secondary
    font-size rem(30px)
    text-align center
    position absolute
    bottom rem(50px)
    width 100%
    cursor pointer
    transition all 1s ease
    &:hover
      background feat
      font-size rem(35px)
      transition all 1s ease
    +tablet()
      font-size rem(40px)
      &:hover
        font-size rem(45px)
    +desktop()
      font-size rem(45px)
      &:hover
        font-size rem(50px)
